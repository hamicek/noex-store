{
  "name": "@hamicek/noex-store",
  "version": "0.1.0",
  "description": "Schema-driven in-memory store built on @hamicek/noex",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./bridge": {
      "types": "./dist/bridge/rules-bridge.d.ts",
      "import": "./dist/bridge/rules-bridge.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "bench": "tsx benchmarks/crud.bench.ts && tsx benchmarks/queries.bench.ts && tsx benchmarks/reactive.bench.ts",
    "bench:crud": "tsx benchmarks/crud.bench.ts",
    "bench:queries": "tsx benchmarks/queries.bench.ts",
    "bench:reactive": "tsx benchmarks/reactive.bench.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "dependencies": {
    "@hamicek/noex": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
